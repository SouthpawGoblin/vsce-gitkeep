{
	"name": "vsce-gitkeep",
	"displayName": "Auto Gitkeep",
	"description": "Automatically add .gitkeep file to empty directories.",
	"version": "1.0.1",
	"publisher": "RogerChi",
	"license": "SEE LICENSE IN LICENSE",
	"icon": "icon.png",
  "galleryBanner": {
    "color": "#eff1f3",
    "theme": "light"
  },
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
    "type": "git",
    "url": "https://github.com/SouthpawGoblin/vsce-gitkeep.git"
  },
	"activationEvents": [
		"workspaceContains:.git",
		"onCommand:extension.gitkeepGen"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.gitkeepGen",
				"title": "Gitkeep Generate"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"ignore": "^5.1.4"
	}
}
